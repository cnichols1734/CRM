# Environment variables for CRM application
# Copy this file to .env and fill in your actual values

# Environment (development/production)
FLASK_ENV=development

# Flask secret key
SECRET_KEY=your-secret-key-here

# Database configuration
# Development: Local SQLite database
# DATABASE_URL=sqlite:///instance/crm_dev.db
# Production: PythonAnywhere MySQL or SQLite
# DATABASE_URL=mysql://username:password@localhost/database_name
# DATABASE_URL=sqlite:////home/yourusername/CRM/instance/crm_prod.db

# Mail settings
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_SENDER_NAME=YourAppName
MAIL_SENDER_EMAIL=noreply@example.com

# API Keys
OPENAI_API_KEY=sk-your-openai-api-key-here
SENDGRID_API_KEY=SG.your-sendgrid-api-key-here
